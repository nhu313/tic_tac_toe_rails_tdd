<table>
<% @board.squares.each_with_index do |value, index| %>
  <% if index%3 == 0 %>
  <tr>
  <%end%>
    <td><%= link_to_if !@presenter.game_over? && !value, value || " ", move_path(:move=>index)
 %></td>
  <% if (index+1)%3 == 0 %>
  </tr>
  <%end%>
<%end%>
</table>
<%= button_to "New game", root_path, :confirm => "Are you sure?", :method => :get %>
