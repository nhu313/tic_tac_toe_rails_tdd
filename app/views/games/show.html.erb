<%
if @in_progress
  message = "#{@current_player.name} (#{(@current_player.value)}) turns."
else
  if @winner
    message = "#{@winner.name} wins!"
  else
    message = "It's a tied!"
  end
end
%>

<h3><%=message%></h3>
<table>
<% @squares.each_with_index do |value, index| %>
  <% if index%3 == 0 %>
  <tr>
  <%end%>
    <td><%= link_to_if @in_progress && !value, value || " ", move_path(:move=>index)
 %></td>
  <% if (index+1)%3 == 0 %>
  </tr>
  <%end%>
<%end%>
</table>
<%= button_to "New game", root_path, :confirm => "Are you sure?", :method => :get %>
